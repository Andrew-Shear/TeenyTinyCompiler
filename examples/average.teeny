LET INT a = 0
WHILE a < 1 REPEAT
    PRINT "Enter number of scores: "
    INPUT a
	IF a < 0 THEN
		PRINT "Number of scores must be positive."
	ELSEIF a == 0 THEN
		PRINT "Number of scores must not be zero."
	ELSE
		PRINT "Enter one value at a time: "
	ENDIF
ENDWHILE

LET INT b = 0
LET INT s = 0
FOR b = 1 TO a REPEAT
    INPUT INT c
    LET s = s + c
ENDFOR

PRINT "Average: "
PRINT s / a
